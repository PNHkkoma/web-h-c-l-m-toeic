        <ng-container *ngSwitchCase="ColumnType.ACTIONS">
          <td class="action-center" vtsAlign="center">
            <ng-container *ngFor="let action of column.actions">
              <ng-container *ngIf="!row['hideAction']">
                <ng-container *ngIf="action.label === 'XÃ³a'; else elseBlock">
                  <a
                    (click)="showConfirmModal(action, row)"
                    *ngIf="action.icon && checkShowDeleteButton(row)"
                    [disabled]="row.status === false"
                    [vtsTooltipTitle]="'common.button.delete' | translate"
                    vts-button
                    vts-tooltip
                    vtsType="link"
